{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["DOM", "es6"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "baseUrl": "src/",
    "outDir": "build/",
    "types": [
      "node",
      "sinon"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
